@using Microsoft.AspNetCore.Identity
@using LetsGame.Areas.Identity.Data;

@inject SignInManager<LetsGame_User> SignInManager
@inject UserManager<LetsGame_User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="btn-group">
        <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Hello @User.Identity?.Name!
        </button>
        <ul class="dropdown-menu dropdown-menu-end text-dark">
            <li class="nav-item">
                <a class="dropdown-item text-dark" asp-area="Hub" asp-page="/Index" title="Hub">My Hub</a>
            </li>
            <li class="nav-item">
                <a  class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                    <button  type="submit" class="btn btn-link text-dark dropdown-item">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="btn btn-light p-1 m-1 nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/", new { area = "" })">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary p-1 m-1 nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
        </li>
    </ul>
}
