@page "{eventID:int?}"
@model LetsGame.Areas.Hub.Pages.Events.EditModel
@{
	ViewData["Title"] = "Create Event";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
	<div class="col-md-6">
		<form method="post" asp-route-isCreate="@Model.IsCreate" asp-route-returnUrl="@Model.ReturnURL">
			<div class="form-floating">
				<input asp-for="Event.EventName" class="form-control" />
				<label asp-for="Event.EventName" class="form-label">Event Name</label>
			</div>

			 <div class="form-floating">
				<input asp-for="Event.Description" class="form-control" />
				<label asp-for="Event.Description" class="form-label">Event Description</label>
			</div>
			 <div class="form-floating">
				<input asp-for="Event.EventDateTime" class="form-control" />
				<label asp-for="Event.EventDateTime" class="form-label">Event Date</label>
			</div>
			 <div class="form-floating">
				<input asp-for="Event.Location" class="form-control" />
				<label asp-for="Event.Location" class="form-label">Event Location</label>
			</div>
			<input type="hidden" asp-for="Event.ID" />
			<input type="hidden" asp-for="Event.Poll" />
			<button type="submit" class="btn btn-primary">@(Model.IsCreate ? "Create" : "Save")</button>
		</form>
	</div>
</div>