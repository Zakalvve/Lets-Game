@using Microsoft.AspNetCore.Identity
@using LetsGame.Areas.Identity.Data;

@inject SignInManager<LetsGame_User> SignInManager
@inject UserManager<LetsGame_User> UserManager

@{
    if (ViewData.TryGetValue("ParentLayout",out var parentLayout)) {
        Layout = (string)parentLayout;
    }
    else {
        Layout = "/Pages/Shared/_Layout.cshtml";
    }

    LetsGame_User lgu = await UserManager.GetUserAsync(User);
}

<!--Jumbotron-->
<div class="row justify-content-center text-center text-light">
    <div class="col">
	    <div class="bg-dark rounded-3 p-5">
		    <h1 class="display-4">Welcome to your Hub</h1>
	    </div>
    </div>
</div>


<div class="row flex-grow-1 app-mode-row">
    <!--Left Side Panel-->
    <div class="col-3 flex-grow-1 app-mode-col">
        <partial name="_HubLeftPanel" />
    </div>
    <div class="col-9 d-flex flex-column flex-grow-1">
        <!--Hub Nav Bar-->
        <div class="row">
            <partial name="_HubNav">
        </div>
        <!--Hub Body-->
        <div class="row flex-grow-1 app-mode-row">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}